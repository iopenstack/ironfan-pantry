modules {
    module {
        name = "<%= @module[:name] %>"
        path = "<%= @module[:path] %>"
    }
}

collection_group {
    <% if @time && @time[:collect] -%>
    collect_every  = <%= @time[:collect] %>
    <% end -%>
    <% if @time && @time[:threshold] -%>
    time_threshold = <%= @time[:threshold] %>
    <% end -%>

    <% @metrics.each do |id, title| -%>
    metric {
        <% if @use_regex -%>
        name_match = "<%= id %>"
        <% else -%>
        name = "<%= id %>"
        <% end -%>
        title = "<%= title %>"
    }
    <% end -%>
}

