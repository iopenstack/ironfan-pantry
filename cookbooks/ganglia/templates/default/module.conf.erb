modules {
    module {
        name = "<%= @module[:name] %>"
        path = "<%= @module[:path] %>"
    }
}

collection_group {
    <%= if @time && @time[:collect] -%>
    collect_every  = <%= @time[:collect] %>
    <% end -%>
    <%= if @time && @time[:threshold] -%>
    time_threshold = <%= @time[:threshold] %>
    <% end -%>

    <% @metrics.each do |m| -%>
    metric {
        name = <%= m %>
    }
    <% end -%>
}

